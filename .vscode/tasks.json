{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend Server",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*starting.*$",
          "endsPattern": "^.*listening on port.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      // Frontend uses a static file server (http-server) via npx, while backend runs a Node.js app via npm script.
      "label": "Start Frontend Server",
      "type": "shell",
      "command": "npx http-server -p 3000 .",
      "options": {
        // Serve from the workspace root where index.html and assets live
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        // The pattern below matches any output line, but does not extract file, location, or message details.
        "pattern": {
          // regexp: Matches any line of output.
          "regexp": "^(.*)$",
          // file, location, message: Set to 1, 2, 3 for compatibility, but not used by http-server.
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          // activeOnStart: Enables background monitoring as soon as the task starts.
          "activeOnStart": true,
          // beginsPattern: Detects when http-server starts up.
          "beginsPattern": "Starting up http-server",
          // endsPattern: Detects when http-server is ready and running.
          "endsPattern": "Hit CTRL-C to stop the server"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
      ,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start Full Stack",
      "dependsOn": [
        "Start Frontend Server",
        "Start Backend Server"
      ],
      "problemMatcher": []
    }
  ]
}
