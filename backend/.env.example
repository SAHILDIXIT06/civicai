###############################################
# CivicAI Backend - Example Environment File  #
# Copy this file to .env and fill the values. #
###############################################

# Backend server port
PORT=4000

# CORS allowed origins (comma-separated). Leave empty to allow any localhost during dev.
# Example: http://localhost:3000,http://localhost:5173
CLIENT_ORIGIN=

# Google Generative AI (Gemini)
# Get an API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Default model used by backend/src/gemini.js
# Options include: gemini-2.5-flash, gemini-2.5-flash-lite, etc.
GEMINI_MODEL_NAME=gemini-2.5-flash
